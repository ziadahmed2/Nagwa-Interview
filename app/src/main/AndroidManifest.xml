<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nagwainterview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NagwaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NagwaInterview">

        <activity android:name=".view.main.VideoActivity" android:configChanges="orientation|uiMode|screenSize"/>
        <activity android:name=".view.main.PdfActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".view.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>